FoamFile
{
    version     2.0;
    format      ascii;
    class       pointVectorField;
    location    "0.01";
    object      pointDisplacement;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 1 0 0 0 0 0];

internalField   uniform (0 0 0);

boundaryField
{
    inlet
    {
        type            fixedValue;
        value           uniform (0 0 0);
    }

    outlet
    {
        type            fixedValue;
        value           uniform (0 0 0);
    }

    "slip.*"
    {
        type            fixedValue;                                                                                                                                             value           uniform (0 0 0);
    }
   
    discoPatch
    {
        type            oscillatingDisplacement;
        amplitude       ( 0 0 0.1 );
        omega           1;
        value           uniform ( 0 0 0 );
    }
}

// ************************************************************************* //
